@model Videosity.ViewModels.IndexMovieViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

@if (Model.Movies != null && Model.Movies.Count > 0) {
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Movie</th>
                <th>Genre</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var movie in Model.Movies) {
                <tr>
                    <td>@Html.ActionLink(movie.Name, movie.Id + "", "Movies")</td>
                    <td>@movie.Genre.Name</td>
                </tr>
            }
        </tbody>
    </table>
}
else {
    <p><i><strong>No Movies Found</strong></i></p>
}

